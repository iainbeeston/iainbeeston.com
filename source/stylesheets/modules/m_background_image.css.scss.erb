.m-background-image {
  $background-path: '<%= image_path('background.jpg') %>';
  background: url($background-path) no-repeat center center fixed;
  background-size: cover;
  filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='#{$background-path}', sizingMethod='scale');
  -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='#{$background-path}', sizingMethod='scale')";
}